<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SpawnGroups>

    <SpawnGroup>
      <Id>
        <TypeId>SpawnGroupDefinition</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_SpawnGroup</SubtypeId>
      </Id>
      <Description>
        [Modular Encounters SpawnGroup]

        [UseRivalAi:true]
        [RivalAiReplaceRemoteControl:true]

        [SpawnConditionsProfiles:GFA_MG_Outpost_Camp_SpawnConditions]

        [ManipulationProfiles:GFA_MG_Manipulation]
        [ManipulationProfiles:GFA_MG_Manipulation_Freighter]

        [ManipulationProfiles:MSB_Manipulation_WearAndTear_Light_Chance]
        [ManipulationProfiles:MSB_Manipulation_WearAndTear_Medium_Chance]

        [ReplenishSystems:true]
        [ReplenishProfiles:GFA_Replenishment_Imperial_Sidearm]
      </Description>
      <Icon>Textures\GUI\Icons\Fake.dds</Icon>
      <IsPirate>true</IsPirate>
      <Frequency>5.0</Frequency>
      <Prefabs>
        <Prefab SubtypeId="[MES-MG]Landing Platform">
          <Position>
            <X>0.0</X>
            <Y>2.0</Y>
            <Z>0.0</Z>
          </Position>
          <Speed>0</Speed>
          <Behaviour>GFA_MG_Outpost_Camp_Behavior</Behaviour>
        </Prefab>
      </Prefabs>
    </SpawnGroup>

  </SpawnGroups>
  <EntityComponents>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_SpawnConditions</SubtypeId>
      </Id>
      <Description>
        [MES Spawn Conditions]

        [PlanetaryInstallation:true]
        [PlanetaryInstallationChance:75]
        [PlanetaryInstallationType:Medium]

        [RivalAiAnySpawn:true]
        [FactionOwner:MG]
        [ReplenishSystems:true]

        [UseRemoteControlCodeRestrictions:true]
        [RemoteControlCode:GFA_MG_Outpost_Camp]
        [RemoteControlCodeMinDistance:15000]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Behavior</SubtypeId>
      </Id>
      <Description>
        [RivalAI Behavior]

	      [BehaviorName:Passive]

        [RemoteControlCode:GFA_MG,GFA_MG_Outpost_Camp]

        [TargetData:MSB_TargetProfile_ShortRange]

        [DialogueBanks:GFA_MG_DialogueBank_Static_1.xml]
        [DialogueBanks:GFA_MG_DialogueBank_Static_2.xml]
        [DialogueBanks:GFA_MG_DialogueBank_Static_3.xml]

        [UsePlayerDistanceTimer:true]
        [PlayerDistanceTrigger:50000]
        [PlayerDistanceTimerTrigger:30000]

        [Triggers:GFA_MG_Outpost_Camp_Trigger_SpawnSetup]
        [Triggers:GFA_MG_Outpost_Camp_Trigger_PlaceCrew]

        [TriggerGroups:MSB_Interaction_RadioCheck_TriggerGroup]
        [TriggerGroups:MSB_Interaction_TradeRequest_TriggerGroup]

        [TriggerGroups:MSB_System_Dialogue_TriggerGroup_Static]
        [TriggerGroups:GFA_System_Reputation_TriggerGroup]

        [TriggerGroups:MSB_StaticCommon_TriggerGroup]
        [TriggerGroups:MSB_System_AreaRestriction_TriggerGroup_1000]
        [TriggerGroups:MSB_System_Despawn_TriggerGroup_DespawnPoint]
        [//TriggerGroups:MSB_System_Communication_TriggerGroup]

        [TriggerGroups:GFA_Outpost_TriggerGroup]
        [TriggerGroups:GFA_System_Resources_TriggerGroup]
        [TriggerGroups:GFA_MG_Outpost_Camp_Spawning_TriggerGroup]

        [Triggers:MSB_EnvironmentSystem_Trigger_IsOnDarkSide]
        [Triggers:MSB_EnvironmentSystem_Trigger_IsOnLightSide]
        [TriggerGroups:MSB_EnvironmentSystem_TriggerGroup_SkinReplacement]
      </Description>
    </EntityComponent>

    <!-- Adjustments to encounter on spawn. -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Trigger_SpawnSetup</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:Timer]
        [UseTrigger:true]
        [StartsReady:true]

        [MaxActions:1]
        [Actions:GFA_MG_Outpost_Camp_Action_Rename]
        [Actions:GFA_MG_Outpost_Camp_Action_SpawningSetup]
        [Actions:GFA_MG_Outpost_Camp_Action_CampAntenna]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Action_Rename</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [ChangeAntennaHudText:true]
        [UseRandomNameGenerator:true]
        [AntennaHudText:Patrol Outpost RandomNumberRandomLetter-RandomNumberRandomNumber]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Action_SpawningSetup</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [SetCustomStrings:true]
        [CustomStrings:GFA_Outpost_SpawnGroup_Tender,]
        [CustomStrings:GFA_Outpost_SpawnGroup_Patrol,GFA_MG_Patrol_Local_SpawnGroup]
        [CustomStrings:GFA_Outpost_SpawnGroup_PatrolArea,GFA_MG_PatrolArea_Local_SpawnGroup]

        [SetCustomCountersVariables:true]
        [CustomCountersVariables:GFA_Outpost_Resources_Cost_Patrol,10]
        [CustomCountersVariables:GFA_Outpost_Resources_Cost_PatrolArea,10]
      </Description>
    </EntityComponent>

    <!-- Spawn other encounter grids -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Action_CampAntenna</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [Chance:100]

        [//SpawnEncounter:true]
        [//Spawner:GFA_MG_Outpost_Camp_Spawn_CampAntenna]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Spawn_CampAntenna</SubtypeId>
      </Id>
      <Description>
        [RivalAI Spawn]

        [UseSpawn:true]
        [StartsReady:true]

        [SpawningType:CustomSpawn]
        [UseRelativeSpawnPosition:false]
        [IgnoreSafetyChecks:true]

        [MaxSpawns:1]
        [SpawnGroups:]

        [MinDistance:25]
        [MaxDistance:100]

        [MinAltitude:0]
        [MaxAltitude:1]
      </Description>
    </EntityComponent>

    <!-- PlaceCrew -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Trigger_PlaceCrew</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:PlayerNear]

        [UseTrigger:true]
        [StartsReady:true]

        [TargetDistance:1000]

        [MinCooldownMs:5000]
        [MaxCooldownMs:5001]

        [MaxActions:1]
        [Actions:GFA_MG_Outpost_Camp_Action_PlaceCrew]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Action_PlaceCrew</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [AddBotsToGrid:true]
        [BotCount:4]

        [OnlySpawnBotsInPressurizedRooms:false]

        [BotSpawnProfileNames:GFA_MG_BotProfile_Crew]
      </Description>
    </EntityComponent>


    <!-- Waypoints -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Waypoint_Spawn</SubtypeId>
      </Id>
      <Description>
        [RivalAI Waypoint]

        [Waypoint:RelativeOffset]
        [RelativeEntity:Self]

        [Offset:{X:0 Y:10 Z:0}]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Waypoint_ExchangePoint</SubtypeId>
      </Id>
      <Description>
        [RivalAI Waypoint]

        [Waypoint:RelativeOffset]
        [RelativeEntity:Self]

        [Offset:{X:0 Y:35 Z:0}]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_Outpost_Camp_Waypoint_Despawn</SubtypeId>
      </Id>
      <Description>
        [RivalAI Waypoint]

        [Waypoint:RelativeOffset]
        [RelativeEntity:Self]

        [Offset:{X:0 Y:25 Z:0}]
      </Description>
    </EntityComponent>

  </EntityComponents>
</Definitions>