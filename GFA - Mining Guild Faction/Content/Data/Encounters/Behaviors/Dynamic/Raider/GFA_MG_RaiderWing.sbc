<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SpawnGroups>

    <SpawnGroup>
      <Id>
        <TypeId>SpawnGroupDefinition</TypeId>
        <SubtypeId>GFA_MG_RaiderWing_SpawnGroup</SubtypeId>
      </Id>
      <Description>
		    [Modular Encounters SpawnGroup]

		    [UseRivalAi:true]
        [RivalAiReplaceRemoteControl:true]

        [SpawnConditionsProfiles:GFA_MG_RaiderWing_SpawnConditions]

        [ManipulationProfiles:GFA_MG_Manipulation]
        [ManipulationProfiles:GFA_MG_Manipulation_Fighter]

        [ManipulationProfiles:MSB_Manipulation_WearAndTear_Light_Chance]
        [ManipulationProfiles:MSB_Manipulation_WearAndTear_Medium_Chance]

        [UseRandomNameGenerator:true]
        [RenameGrid:false]
        [ReplaceAntennaHudTextInsteadOfName:true]
        [ReplaceAntennaNameWithRandomizedName:Antenna]
        [RandomGridNamePattern:Strike Squadron AurebeshLetter-RandomNumberRandomNumber]
      </Description>
      <Icon>Textures\GUI\Icons\Fake.dds</Icon>
      <IsPirate>true</IsPirate>
      <Frequency>5.0</Frequency>
      <Prefabs>
        <Prefab SubtypeId="[MES-MG]TIEmg Starfighter[Grunt Leader]">
          <Position>
            <X>0.0</X>
            <Y>0.0</Y>
            <Z>0.0</Z>
          </Position>
          <Speed>50</Speed>
          <Behaviour>GFA_MG_RaiderWing_Behavior</Behaviour>
        </Prefab>
        <Prefab SubtypeId="[MES-MG]TIEmg Starfighter[Grunt]">
          <Position>
            <X>-100.0</X>
            <Y>0.0</Y>
            <Z>0.0</Z>
          </Position>
          <Speed>50</Speed>
          <Behaviour>GFA_MG_Escort_Fighter_Behavior</Behaviour>
        </Prefab>
        <Prefab SubtypeId="[MES-MG]TIEmg Starfighter[Grunt]">
          <Position>
            <X>100.0</X>
            <Y>0.0</Y>
            <Z>0.0</Z>
          </Position>
          <Speed>50</Speed>
          <Behaviour>GFA_MG_Escort_Fighter_Behavior</Behaviour>
        </Prefab>
      </Prefabs>
    </SpawnGroup>

  </SpawnGroups>
  <EntityComponents>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_RaiderWing_SpawnConditions</SubtypeId>
      </Id>
      <Description>
        [MES Spawn Conditions]

        [SpaceCargoShip:true]
        [GravityCargoShip:true]
        [LunarCargoShip:true]
        [AtmosphericCargoShip:true]

        [RivalAiAnySpawn:true]
        [FactionOwner:MG]
        [ReplenishSystems:false]

        [SkipVoxelSpawnChecks:true]
        [SkipGridSpawnChecks:true]
        [IgnoreCombatPhase:true]

        [SpaceCargoShipChance:70]
        [LunarCargoShipChance:70]
        [AtmosphericCargoShipChance:70]
        [GravityCargoShipChance:70]

        [UseKnownPlayerLocations:true]
        [KnownPlayerLocationMustMatchFaction:true]

        [UseThreatLevelCheck:true]
        [ThreatLevelCheckRange:15000]
        [ThreatIncludeOtherNpcOwners:false]
        [ThreatScoreMinimum:250]
        [ThreatScoreMaximum:450]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GFA_MG_RaiderWing_Behavior</SubtypeId>
      </Id>
      <Description>
        [RivalAI Behavior]

        [BehaviorName:Patrol]

        [TargetData:MSB_TargetProfile_LongRange]
        [AutopilotData:MSB_Raider_Autopilot]
        [SecondaryAutopilotData:GFA_Fighter_Autopilot]
        [TertiaryAutopilotData:GFA_Fighter_Autopilot_Strike]

        [DialogueBanks:GFA_MG_DialogueBank_Dynamic_1.xml]
        [DialogueBanks:GFA_MG_DialogueBank_Dynamic_2.xml]
        [DialogueBanks:GFA_MG_DialogueBank_Dynamic_3.xml]

        [UsePlayerDistanceTimer:true]
        [PlayerDistanceTrigger:50000]
        [PlayerDistanceTimerTrigger:30000]

        [EscortOffsets:{X:50 Y:0 Z:0}]
        [EscortOffsets:{X:-50 Y:0 Z:0}]

        [//Triggers:GFA_MG_RaiderWing_Trigger_SpawnSetup]

        [TriggerGroups:MSB_System_Dialogue_TriggerGroup_Dynamic]
        [TriggerGroups:GFA_System_Reputation_TriggerGroup]
        [TriggerGroups:GFA_SpawnEffects_TriggerGroup]

        [TriggerGroups:MSB_DynamicCommon_TriggerGroup]
        [TriggerGroups:MSB_System_Despawn_TriggerGroup_Simple]
        [//TriggerGroups:MSB_System_Crash_TriggerGroup]
        [TriggerGroups:MSB_System_CommandChain_Leader_TriggerGroup]

        [TriggerGroups:MSB_Raider_TriggerGroup]
        [TriggerGroups:MSB_Fighter_TriggerGroup]
      </Description>
    </EntityComponent>

  </EntityComponents>
</Definitions>